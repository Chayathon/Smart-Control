# Server Configuration
NODE_ENV=production
PORT=8080

# Database
MONGODB_URI=mongodb://localhost:27017
MONGODB_DBNAME=radio_db

# JWT Secrets
ACCESS_TOKEN_SECRET=your_very_secure_access_token_secret_here_minimum_32_characters
REFRESH_TOKEN_SECRET=your_very_secure_refresh_token_secret_here_minimum_32_characters

# MQTT Configuration (ถ้ามี)
MQTT_URL=ws://localhost:9001
MQTT_USERNAME=admin
MQTT_PASSWORD=admin
MQTT_TOPIC_COMMAND=mass-radio/zone1/command
MQTT_TOPIC_STATUS=mass-radio/zone1/status
MQTT_IGNORE_RETAINED=true

# Stream Configuration
AUTO_REPLAY_ON_END=false

# Icecast Configuration (ถ้ามี)
ICECAST_HOST=localhost
ICECAST_PORT=8000
ICECAST_USERNAME=source
ICECAST_PASSWORD=admin
ICECAST_MOUNT=/stream.mp3