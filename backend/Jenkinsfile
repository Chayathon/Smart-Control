        stage('Deploy to target folder') {
            steps {
                echo "==> Sync project to ${TARGET_DIR}"
                sh """
                    mkdir -p ${TARGET_DIR}
                    rsync -av --delete \
                        --exclude='.git' \
                        --exclude='node_modules' \
                        ${WORKSPACE}/backend/ ${TARGET_DIR}/
                """
            }
        }

        stage('Restart PM2') {
            steps {
                echo "==> Restart PM2 app: ${PM2_APP_NAME}"
                sh """
                    cd ${TARGET_DIR}

                    # ‡πÄ‡∏£‡∏µ‡∏¢‡∏Å pm2 ‡πÉ‡∏ô‡∏ô‡∏≤‡∏° user pi
                    sudo -u pi ${PM2_BIN} restart ${PM2_APP_NAME} \
                      || sudo -u pi ${PM2_BIN} start server.js --name ${PM2_APP_NAME}

                    sudo -u pi ${PM2_BIN} save
                """
            }
        }
        
