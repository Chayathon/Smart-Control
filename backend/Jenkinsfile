        TARGET_DIR   = '/var/lib/jenkins/Backend_Node_radio'
        PM2_APP_NAME = 'node-audio'   // ‡∏ä‡∏∑‡πà‡∏≠‡πÇ‡∏õ‡∏£‡πÄ‡∏ã‡∏™ pm2
        PM2_BIN      = '/home/mass/.nvm/versions/node/v22.17.1/bin/pm2'
